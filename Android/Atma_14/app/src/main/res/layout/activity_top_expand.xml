<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atma.atma_14.TopExpand">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/girl"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="21sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary..."
                android:textSize="18sp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projects Currently Working On"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:paddingLeft="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/top_expand_currentworking1_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/girl"
                android:scaleType="centerCrop"
                app:civ_border_width="3dp"
                app:civ_border_color="#2C3E50"
                android:id="@+id/top_expand_currentworking1_image"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Valunteer"
                android:textSize="12sp"
                android:textColor="#2C3E50"
                android:layout_marginTop="8dp"
                android:id="@+id/top_expand_currentworking1_textview"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/top_expand_currentworking2_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/girl"
                android:scaleType="centerCrop"
                app:civ_border_width="3dp"
                app:civ_border_color="#2C3E50"
                android:id="@+id/top_expand_currentworking2_image"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Valunteer"
                android:textSize="12sp"
                android:textColor="#2C3E50"
                android:layout_marginTop="8dp"
                android:id="@+id/top_expand_currentworking2_textview"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/top_expand_currentworking3_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/girl"
                android:scaleType="centerCrop"
                app:civ_border_width="3dp"
                app:civ_border_color="#2C3E50"
                android:id="@+id/top_expand_currentworking3_image"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Valunteer"
                android:textSize="12sp"
                android:textColor="#2C3E50"
                android:layout_marginTop="8dp"
                android:id="@+id/top_expand_currentworking3_textview"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/top_expand_currentworking4_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/girl"
                android:scaleType="centerCrop"
                app:civ_border_width="3dp"
                app:civ_border_color="#2C3E50"
                android:id="@+id/top_expand_currentworking4_image"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Valunteer"
                android:textSize="12sp"
                android:textColor="#2C3E50"
                android:layout_marginTop="8dp"
                android:id="@+id/top_expand_currentworking4_textview"
                android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</FrameLayout>
